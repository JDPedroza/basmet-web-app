{
  "firestore": {
    "rules": "firebase.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "site": "basmet-sci-tests",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
